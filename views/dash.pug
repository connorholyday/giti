include ./includes/header.pug

// https://getbootstrap.com/docs/3.3/css/#grid-example-basic

.container
  h1=name + ' dashboard'

  .row.dashbar
    .col-md-6
      p=path
    .col-md-2
      a(href='/commits/' + name) Commits
    .col-md-2
      a(href='/branches/' + name) Branches
    .col-md-2
      a(href='/remrepo/' + name) Remove

  .row
    .col-md-10
      h3 Latest commits
      table(class='table table-striped table-hover table-condensed')
        thead
          tr
            th Author
            th Message
            th Date
        tbody
          each row in commits
            tr
              td=row.author_name
              td: a(href='/commits/' + name + '/' + row.hash)=row.message
              td=row.date

    .col-md-2
      h3 Branches
      table(class='table table-striped table-hover table-condensed')
        thead
          tr
            th Name
        tbody
          each row in branches
            tr
              td=row.name

        
include ./includes/footer.pug  